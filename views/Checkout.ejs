        <div class="cart">
            <h6 class="yourcartstyle">Your Cart</h6>
            <table>
                <tr>
                  <th>Preview</th>
                  <th>T-Shirt</th>
                  <th>Size</th>
                  <th>Pieces</th>
                  <th>Price</th>
                </tr>
                <% var i;
                var pic;
                var total = 0;
                for(i=0;i < product.length;i++){
                    pic = "/products/product-shirt/product"+ (i+1) +".png";
                    total += product[i].total;
                    %>
